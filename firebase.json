{
  "hosting": {
    "public": "client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "functions": {
    "source": "server"
  },
  "firestore": {
    "rules": "server/database/firestore.rules",
    "indexes": "server/database/firestore.indexes.json"
  }
}
